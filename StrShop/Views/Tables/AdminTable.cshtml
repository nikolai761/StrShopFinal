<form asp-action="AdminTable" method="post">

    <div class="row mt-5 mb-2">
        <table class="table table-striped table-bordered ">
            <tbody class="table-responsive ">
                <tr style="display:flex; width: 100%">
                    <th style="display:flex; width: 33.3%">Email</th>
                    <th style="display:flex; width: 33.3%">Status</th>
                    <th style="display:flex; width: 33.3%">Role</th>
                </tr>
                @foreach (var user in Model.GetUsers)
                {
                    <tr style="display:flex; width: 100%">
                        <td>
                            <input type="checkbox" name="selectedUsers"
                                   id="@user.ID" value="@user.ID"
                                   class="styled">
                        </td>

                        <td style="display:flex; width: 33.3%"><a asp-controller="Users" asp-action="UserPage" asp-route-userID="@user.ID">  @user.Email </a></td>
                        @{ if (!user.Unblocked)
                            {
                                <td style="display:flex; width: 33.3%"> Blocked </td> }
                            else
                            {
                                <td style="display:flex; width: 33.3%">Unblocked</td>} }
                        @{ if (user.RoleId == 1)
                            {
                                <td style="display:flex; width: 33.3%"> Admin </td> }
                            else
                            {
                                <td style="display:flex; width: 33.3%">User</td>} }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <button name="button" value="Block" type="submit">Block</button>
        <button name="button" value="Unblock" type="submit">Unblock</button>
        <button name="button" value="Delete" type="submit">Delete</button>
        <button name="button" value="Admin" type="submit">Make an admin</button>
    </div>

</form>