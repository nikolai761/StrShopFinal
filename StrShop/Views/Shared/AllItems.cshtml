@model Item

<div class="col-lg-3">
    <div style="width: 100%; height: 200px; margin-bottom: 20px">
        <img class=" img-thumbnail" src="@Model.img" style="display: flex; width:100%; height: 100%; object-fit: contain;" alt="@Model.ItemName" />
    </div>

    <h2> @Model.ItemName</h2>
    <p>Цена: @Model.price.ToString("c")</p>
    
    @if (User.IsInRole("user"))
    {
        <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a></p>
    }
</div>