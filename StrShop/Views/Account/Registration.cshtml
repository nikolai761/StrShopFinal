@model RegistrationViewModel
<div class="container" style=" margin-right: auto; margin-left: auto; margin-top: 15rem; width: 25rem;">
    <form asp-action="Registration" method="post" class="align-self-md-auto">
        <div class="form-group">
            <label asp-for="Email">Почта</label>
            <div>
                <input asp-for="Email" />
            </div>
            <span asp-validation-for="Email" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <div>
                <input asp-for="Password" />
            </div>
            <span asp-validation-for="Password" />
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>

        <input class="btn btn-success" type="submit" value="Зарегестрироваться" />
        <a class="btn btn-warning" asp-controller="Account" asp-action="SignIn"> Назад </a>

    </form>
</div>